{
  "name": "ta3limi",
  "version": "1.0.0",
  "description": "Plateforme éducative tunisienne complète pour le primaire, collège et lycée",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "wrangler pages dev dist --d1=ta3limi-production --r2=ta3limi-files --kv=auth --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name ta3limi",
    "db:create": "wrangler d1 create ta3limi-production",
    "db:migrate:local": "wrangler d1 migrations apply ta3limi-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply ta3limi-production",
    "db:seed": "wrangler d1 execute ta3limi-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "kv:create": "wrangler kv:namespace create auth",
    "r2:create": "wrangler r2 bucket create ta3limi-files",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@livekit/components-react": "^2.7.3",
    "@reduxjs/toolkit": "^2.5.0",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.4.7",
    "dompurify": "^3.2.3",
    "hono": "^4.6.11",
    "jsonwebtoken": "^9.0.2",
    "livekit-client": "^2.9.4",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.1.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.2.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.8",
    "wrangler": "^4.45.2"
  }
}
